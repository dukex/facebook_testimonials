<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/react.js"></script>
    <script src="ReactRouter.js" type="text/javascript"></script>
    <script src="fetch.js" type="text/javascript" charset="utf-8"></script>

    <script src="app.js" type="text/babel" charset="utf-8"></script>

    <script type="text/babel" charset="utf-8">
      function statusChangeCallback(response) {
        if (response.status === 'connected') {
          window.startApp();
        } else if (response.status === 'not_authorized') {
          document.getElementById('status').innerHTML = 'Please log ' +
            'into this app.';
        } else {
          document.getElementById('status').innerHTML = 'Please log ' +
            'into Facebook.';
        }
      }

      window.fbAsyncInit = function() {
        FB.init({
          appId      : '<%= @appID %>',
          cookie     : true,
          xfbml      : true,
          version    : 'v2.2'
        });

        FB.getLoginStatus(function(response) {
          statusChangeCallback(response);
        });

        FB.login({ scope: "user_friends" });
      };

      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    </script>

    <style type="text/css" media="all">
      body {
        background: #D9E6F7;
      }

      form {
        background: #FFF;
        margin-bottom: 15px;
      }

      textarea {
        border: 1px solid #333;
        color: #000;
        font-family: sans-serif;
        background: #FFF;
        width: 100%;
        max-width: 795px
      }

      .depo-box {
        margin: 20px auto;
        padding: 10px;
        max-width: 800px;
        background: #FFF;
        border-radius: 10px;
        box-shadow: 1px 1px 3px #C6CDD4;
        overflow: hidden;
      }
      .testimonial {
        overflow: hidden;
        margin-bottom: 10px;
        background: #F0F7FF;
        padding: 5px;
      }
      .testimonial img {
        max-width: 75px;
        width: 10%;
        float: left;
      }
      .testimonial .body {
        float: right;
        width: 88%;
        padding: 0;
        font-size: 12px;
        line-height: 15px;
        font-family: sans-serif;
      }
      .testimonial .body span.author {
        color: #5EA2B5;
      }
      h1 {
        font-size: 14px;
        font-family: sans-serif;
      }
    </style>
  </head>
  <div id="status">
  </div>
  <div id="container">
  </div>
</body>
</html>

